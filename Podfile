platform :ios, '14.1'

def common_pods_for_target
  pod 'R.swift'
  pod 'Firebase/Analytics'
  pod 'Firebase/Crashlytics'
  pod 'Firebase/Messaging'
end

target 'NewsAppKarSpv' do
  use_frameworks!
  common_pods_for_target
end

target 'NewsAppKarSpvTests' do
  use_frameworks!
  common_pods_for_target
end

target 'NewsAppKarSpvAppStore' do
  use_frameworks!
  common_pods_for_target
end
